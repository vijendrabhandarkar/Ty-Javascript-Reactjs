<div class="container">
  <form action="/products/edit-product" method="POST">
    <div class="mb-3">
      <label for="pid" class="form-label" type="hidden">ID</label>
      <input
        {{!-- type="text" --}}
        type="hidden"
        name="_id"
        class="form-control"
        id="pid"
        value="{{selectedProduct._id}}"
        aria-describedby="pid"
      />

    </div>
    <div class="mb-3">
      <label for="pname" class="form-label">Product Name</label>
      <input
        type="text"
        name="pName"
        class="form-control"
        id="pname"
        value="{{selectedProduct.pName}}"
        aria-describedby="pname"
      />

    </div>
    <div class="mb-3">
      <label for="pdesc" class="form-label">Product Description</label>
      <input
        type="text"
        name="pDesc"
        class="form-control"
        id="pdesc"
        value="{{selectedProduct.pDesc}}"
        aria-describedby="pdesc"
      />

    </div>
    <div class="mb-3">
      <label for="pprice" class="form-label">Product Price</label>
      <input
        type="number"
        name="pPrice"
        class="form-control"
        id="pprice"
        value="{{selectedProduct.pPrice}}"
        aria-describedby="pprice"
      />

    </div>
    <button type="submit" class="btn btn-primary">EDIT Product</button>
  </form>
</div>